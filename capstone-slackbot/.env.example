# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_CHANNEL=#general

# OpenAI API Key (for GPT-4o-mini)
OPENAI_API_KEY=sk-your-openai-api-key-here

# PostgreSQL Database (optional - uses mock if not provided)
# Support both POSTGRES_* and POSTGRESS_* variants
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Alternative naming (with double 's')
# POSTGRESS_HOST=your-postgres-host.com
# POSTGRESS_PORT=5432
# POSTGRESS_NAME=your_database_name
# POSTGRESS_USER=your_username
# POSTGRESS_PASS=your_password

# MCP DatabaseToolbox (optional)
USE_MCP_DATABASE=false
MCP_TOOLBOX_PATH=/usr/local/bin/toolbox
MCP_TOOLS_FILE=/app/tools.yaml

# Mock mode (for development)
USE_MOCK_SLACK=false

# Dataframe cache TTL (in seconds, default: 3600 = 1 hour)
# Set to empty to disable cache expiration
DATAFRAME_CACHE_TTL=3600
