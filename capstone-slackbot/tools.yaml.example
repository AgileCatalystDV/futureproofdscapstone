# MCP DatabaseToolbox Configuration
# Copy this to tools.yaml and configure your database connections

databases:
  - name: ${POSTGRESS_NAME:-capstone_postgres}
    type: postgresql
    connection:
      host: ${POSTGRES_HOST}
      port: ${POSTGRES_PORT:-5432}
      database: ${POSTGRES_DB}
      user: ${POSTGRES_USER}
      password: ${POSTGRES_PASSWORD}
      sslmode: prefer
    
    # Optional: Schema restrictions
    allowed_schemas:
      - public
    
    # Optional: Table restrictions (for guardrails)
    allowed_tables:
      - users
      - subscriptions
      - payments
      - sessions
    
    # Optional: Query limits
    max_rows: 10000
    read_only: true  # Set to false if you need write access

# Alternative: Use connection string
# databases:
#   - name: ${POSTGRESS_NAME:-capstone_postgres}
#     type: postgresql
#     connection_string: postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT:-5432}/${POSTGRES_DB}

# For development with mock data, you can skip this file
# and use the MockPostgresConnection instead

